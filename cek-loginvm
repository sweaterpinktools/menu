#!/bin/bash
clear
NC='\e[0m'
BIWhite='\033[1;97m'
BIYellow='\033[0;33m'

mkdir -p /etc/vmess/
mkdir -p /etc/limit/vmess/ip/
mkdir -p /etc/limit/vmess/

TEMP_LOG_FILE="/tmp/xray_access_temp.log"

function convert_size() {
    local -i bytes=$1
    if [[ $bytes -lt 1024 ]]; then
        echo "${bytes} B"
    elif [[ $bytes -lt 1048576 ]]; then
        echo "$(( (bytes + 1023)/1024 )) KB"
    elif [[ $bytes -lt 1073741824 ]]; then
        echo "$(( (bytes + 1048575)/1048576 )) MB"
    else
        echo "$(( (bytes + 1073741823)/1073741824 )) GB"
    fi
}

function is_tethering_ip() {
    local ip="$1"
    local tethering_prefixes=(
        "192.168.43."
        "192.168.42."
        "192.168.44."
        "192.168.1."
        "192.168.0."
        "172.20."
        "10.0.0."
        "172.16."
        "192.168.137."
    )
    for prefix in "${tethering_prefixes[@]}"; do
        if [[ "$ip" == "$prefix"* ]]; then
            return 0
        fi
    done
    return 1
}
    
clear
echo -e "${BIWhite}-------------------------------------------${NC}"
echo -e "${BIYellow}CEK VMESS LOGIN${NC}"
echo -e "${BIWhite}-------------------------------------------${NC}"
#echo -n > /var/log/xray/access.log
cp /var/log/xray/access.log "$TEMP_LOG_FILE"

users=( $(grep '###' /etc/xray/config.json 2>/dev/null | awk '{print $2}' | sort | uniq) )

now=$(date +%s)

ACTIVE_USERS_FOUND=0 

for user in "${users[@]}"; do
    [[ -z "$user" ]] && continue

    > /tmp/ipvmess.txt 

    raw_connected_ips=($(grep -w "$user" "$TEMP_LOG_FILE" | grep -oP '\sfrom\s\K[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}' | sort -u))

    active_ips_filtered=()
    ip_count=0

    for ip in "${raw_connected_ips[@]}"; do
        if ! is_tethering_ip "$ip"; then
            active_ips_filtered+=("$ip")
            ((ip_count++))
        fi
    done

    last_login_raw_time_only=$(grep -w "$user" "$TEMP_LOG_FILE" | tail -n 1 | awk '{print $1, $2}')
    last_login_timestamp=$(date -d "$last_login_raw_time_only" +%s 2>/dev/null || echo 0)
    
    time_diff=$((now - last_login_timestamp))
    online_status=""

    if [[ "$last_login_timestamp" -eq 0 ]]; then
        online_status="${BIWhite}N/A${NC}"
    elif [[ "$time_diff" -le 60 ]]; then
        online_status="ONLINE"
    else
        online_status="OFFLINE (${time_diff}s yang lalu)"
    fi

    if [[ "$online_status" == "ONLINE" || "$ip_count" -gt 0 ]]; then
        ACTIVE_USERS_FOUND=1 

        limit_quota=$(convert_size "$(cat /etc/vmess/"$user" 2>/dev/null || echo 0)")
        usage_quota=$(convert_size "$(cat "/etc/limit/vmess/${user}" 2>/dev/null || echo 0)")
        limit_ip=$(cat /etc/limit/vmess/ip/"$user" 2>/dev/null || echo "Tidak Dibatasi")
        
        total_log_count=$(grep -w "$user" "$TEMP_LOG_FILE" | wc -l)

        echo -e "${BIWhite}┌────────────────────────────────────┐${NC}"
        printf "${BIWhite}│ %-35s│${NC}\n" "User          : ${user}"
        printf "${BIWhite}│ %-35s│${NC}\n" "Status        : ${online_status}"
        printf "${BIWhite}│ %-35s│${NC}\n" "Kuota         : ${usage_quota} / ${limit_quota}"
        printf "${BIWhite}│ %-35s│${NC}\n" "Limit IP      : ${limit_ip} IP"
        printf "${BIWhite}│ %-35s│${NC}\n" "IP Aktif      : ${ip_count} IP"
        printf "${BIWhite}│ %-35s│${NC}\n" "Total Log     : ${total_log_count}"
        
        if [[ "$ip_count" -gt 0 ]]; then
            echo -e "${BIWhite}├────────────────────────────────────┤${NC}"
            echo -e "${BIWhite}│ Alamat IP:                         │${NC}"
            for i in "${!active_ips_filtered[@]}"; do
                printf "${BIWhite}│ %-4s %-29s │${NC}\n" "$((i+1)) )" "${active_ips_filtered[$i]}"
            done
        fi
        echo -e "${BIWhite}└────────────────────────────────────┘${NC}"
        echo ""
    fi
done

if [[ "$ACTIVE_USERS_FOUND" -eq 0 ]]; then
    echo -e "${BIWhite}-------------------------------------------${NC}"
    echo -e "${BIYellow}Tidak ada pengguna Vmess yang aktif${NC}"
fi

rm -f /tmp/ipvmess.txt "$TEMP_LOG_FILE"
echo -e "${BIWhite}-------------------------------------------${NC}"
read -n 1 -s -r -p "Tekan tombol apa saja untuk kembali ke menu"
m-vmess