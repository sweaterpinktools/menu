#!/bin/bash
clear
if ! command -v at &> /dev/null; then
    apt update && sudo apt install -y at
	systemctl enable --now atd
fi
clear
echo -e "\033[1;93m-----------------------------------------\033[0m"
echo -e "CREATE TRIAL VLESS ACCOUNT"
echo -e "\033[1;93m-----------------------------------------\033[0m"
echo -e ""
echo -e "Note: Input Hanya angka saja"
echo -e "Contoh: 30"
echo -e ""
while true; do
    read -p "Input Minutes : " pup
    if [[ "$pup" =~ ^[0-9]+$ ]]; then
        break
    else
        echo -e "Mohon Untuk Input Angka Saja"
    fi
done
Login=Trial
masaaktif=1
iplimit=1
Quota=1
user="${Login}VL$(tr -dc 0-9 </dev/urandom | head -c3)"
domain=$(cat /etc/xray/domain)
uuid=$(cat /proc/sys/kernel/random/uuid)
tgl=$(date -d "$masaaktif days" +"%d")
bln=$(date -d "$masaaktif days" +"%b")
thn=$(date -d "$masaaktif days" +"%Y")
expe="$tgl $bln, $thn"
tgl2=$(date +"%d")
bln2=$(date +"%b")
thn2=$(date +"%Y")
tnggl="$tgl2 $bln2, $thn2"
exp=$(date -d "$masaaktif days" +"%Y-%m-%d")
sed -i '/#vless$/a\#& '"$user $exp"'\
},{"id": "'""$uuid""'","email": "'""$user""'"' /etc/xray/config.json
sed -i '/#vlessgrpc$/a\#& '"$user $exp"'\
},{"id": "'""$uuid""'","email": "'""$user""'"' /etc/xray/config.json

vlesslink1="vless://${uuid}@${domain}:443?path=/vless&security=tls&encryption=none&type=ws&host=${domain}&sni=${domain}#${user}"
vlesslink2="vless://${uuid}@${domain}:80?path=/vless&encryption=none&type=ws&host=${domain}#${user}"
vlesslink3="vless://${uuid}@${domain}:443?mode=gun&security=tls&encryption=none&type=grpc&serviceName=vless-grpc&sni=${domain}#${user}"
if [ ! -e /etc/vless ]; then
  mkdir -p /etc/vless
fi

if [[ $iplimit -gt 0 ]]; then
mkdir -p /etc/limit/vless/ip
echo -e "$iplimit" > /etc/limit/vless/ip/$user
else
echo > /dev/null
fi

if [ -z ${Quota} ]; then
  Quota="0"
fi

c=$(echo "${Quota}" | sed 's/[^0-9]*//g')
d=$((${c} * 1024 * 1024 * 1024))

if [[ ${c} != "0" ]]; then
  echo "${d}" >/etc/vless/${user}
fi
DATADB=$(cat /etc/vless/.vless.db | grep "^#&" | grep -w "${user}" | awk '{print $2}')
if [[ "${DATADB}" != '' ]]; then
  sed -i "/\b${user}\b/d" /etc/vless/.vless.db
fi
echo "#& ${user} ${exp} ${uuid} ${Quota} ${iplimit}" >>/etc/vless/.vless.db

systemctl restart xray > /dev/null 2>&1
		echo sed -i \"/$user/d\" /etc/xray/config.json  | at now + $pup minutes

mkdir -p /detail/vless/
cat > /detail/vless/$user.txt <<-END
-----------------------------------------
Trial Vless Account
-----------------------------------------
Remarks     : ${user}
Domain      : ${domain}
User Quota  : ${Quota} GB
User Ip     : ${iplimit} IP
Port Non TLS: 80,8080,2086,8880
Port TLS    : 443,8443
User ID     : ${uuid}
Encryption  : none
Path TLS    : /vless/multi-path
ServiceName : vless-grpc
-----------------------------------------
Link TLS    : ${vlesslink1}
-----------------------------------------
Link NTLS   : ${vlesslink2}
-----------------------------------------
Link GRPC   : ${vlesslink3}
-----------------------------------------
Format OpenClash : https://${domain}:81/vless-$user.txt
-----------------------------------------
Dibuat Pada      : $tnggl
Aktif Selama     : $pup Minutes
-----------------------------------------

END

cat >/var/www/html/vless-$user.txt <<-END

-----------------------------------------
Format Open Clash
-----------------------------------------
- name: Vless-$user-WS TLS
  server: ${domain}
  port: 443
  type: vless
  uuid: ${uuid}
  cipher: auto
  tls: true
  skip-cert-verify: true
  servername: ${domain}
  network: ws
  ws-opts:
    path: /vless
    headers:
      Host: ${domain}

- name: Vless-$user-WS (CDN) Non TLS
  server: ${domain}
  port: 80
  type: vless
  uuid: ${uuid}
  cipher: auto
  tls: false
  skip-cert-verify: false
  servername: ${domain}
  network: ws
  ws-opts:
    path: /vless
    headers:
      Host: ${domain}
  udp: true

- name: Vless-$user-gRPC (SNI)
  server: ${domain}
  port: 443
  type: vless
  uuid: ${uuid}
  cipher: auto
  tls: true
  skip-cert-verify: true
  servername: ${domain}
  network: grpc
  grpc-opts:
  grpc-mode: gun
    grpc-service-name: vless-grpc

-----------------------------------------
Link Akun Vless 
-----------------------------------------
Link TLS      : 
${vlesslink1}
-----------------------------------------
Link none TLS : 
${vlesslink2}
-----------------------------------------
Link GRPC     : 
${vlesslink3}
-----------------------------------------
Expired          : $pup Minutes
-----------------------------------------
END
# ===========================
# Notifikasi otomatis Trial VLESS (format sama seperti SSH)
# Ganti function notif_vl() ... sampai m-vless dengan blok ini
# ===========================
BOT_DB="/etc/bot/.bot.db"

# Ambil token & chat id dengan aman (pakai baris terakhir #bot#)
if [ -f "$BOT_DB" ]; then
  read _ KEY CHATID < <(grep -E "^#bot# " "$BOT_DB" | tail -n 1)
else
  KEY=""
  CHATID=""
fi

URL="https://api.telegram.org/bot${KEY}/sendMessage"
TIME="10"

# Info server tambahan
domain=$(cat /etc/xray/domain 2>/dev/null || echo "example.com")
IP=$(curl -sS ipv4.icanhazip.com || echo "0.0.0.0")
ISP=$(curl -s ipinfo.io/org | cut -d " " -f 2-10 || echo "Unknown-ISP")
tnggl=$(date +"%d-%m-%Y")
expe=$(date -d "${pup} minutes" +"%d-%m-%Y %H:%M" 2>/dev/null || echo "${expe:-unknown}")

# Susun teks plain-text identik tampilan terminal
TEXT="-----------------------------------------
Trial Vless Account
-----------------------------------------
Remarks          : ${user}
Domain           : ${domain}
IP Server        : ${IP}
ISP              : ${ISP}
User Quota       : ${Quota} GB
User IP          : ${iplimit} IP
Port Non TLS     : 80,8080,2086,8880
Port TLS         : 443,8443
User ID          : ${uuid}
Encryption       : none
Path TLS         : /vless/multi-path
ServiceName      : vless-grpc
-----------------------------------------
Link TLS         : ${vlesslink1}
-----------------------------------------
Link NTLS        : ${vlesslink2}
-----------------------------------------
Link GRPC        : ${vlesslink3}
-----------------------------------------
Format OpenClash : https://${domain}:81/vless-${user}.txt
-----------------------------------------
Dibuat Pada      : ${tnggl}
Aktif Selama     : ${pup} Minutes
-----------------------------------------
*_PEMBELIAN BERHASIL_*
-----------------------------------------"

# Kirim notifikasi (non-blocking)
if [ -n "$KEY" ] && [ -n "$CHATID" ]; then
  curl -s --max-time "$TIME" -X POST "$URL" \
    -d chat_id="$CHATID" \
    --data-urlencode "text=$TEXT" >/dev/null 2>&1 &
fi

# Restart layanan (jika perlu) lalu tampilkan hasil ke terminal
systemctl restart xray >/dev/null 2>&1
systemctl restart nginx >/dev/null 2>&1
sleep 0.5
clear

echo -e "\033[1;93m-----------------------------------------\033[0m"
echo -e "Trial Vless Account"
echo -e "\033[1;93m-----------------------------------------\033[0m"
echo -e "Remarks     : ${user}"
echo -e "Domain      : ${domain}"
echo -e "User Quota  : ${Quota} GB"
echo -e "User Ip     : ${iplimit} IP"
echo -e "Port Non TLS: 80,8080,2086,8880"
echo -e "Port TLS    : 443,8443"
echo -e "User ID     : ${uuid}"
echo -e "Encryption  : none"
echo -e "Path TLS    : /vless/multi-path"
echo -e "ServiceName : vless-grpc"
echo -e "\033[1;93m-----------------------------------------\033[0m"
echo -e "Link TLS    : ${vlesslink1}"
echo -e "\033[1;93m-----------------------------------------\033[0m"
echo -e "Link NTLS   : ${vlesslink2}"
echo -e "\033[1;93m-----------------------------------------\033[0m"
echo -e "Link GRPC   : ${vlesslink3}"
echo -e "\033[1;93m-----------------------------------------\033[0m"
echo -e "Format OpenClash : https://${domain}:81/vless-${user}.txt"
echo -e "\033[1;93m-----------------------------------------\033[0m"
echo -e "Dibuat Pada      : ${tnggl}"
echo -e "Aktif Selama     : ${pup} Minutes"
echo -e "\033[1;93m-----------------------------------------\033[0m"
echo ""
read -n 1 -s -r -p "Press any key to back on menu"
m-vless
