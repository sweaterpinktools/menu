#!/bin/bash
clear
export TIME="10"
IP=$(curl -sS ipv4.icanhazip.com)
CITY=$(curl -s ipinfo.io/city )
domain=$(cat /etc/xray/domain)
NS=$(cat /etc/xray/dns 2>/dev/null)
PUB=$( cat /etc/slowdns/server.pub 2>/dev/null )
clear
until [[ $user =~ ^[a-zA-Z0-9_]+$ && ${CLIENT_EXISTS} == '0' ]]; do
echo -e "\033[1;93m-----------------------------------------\033[0m"
echo -e "CREATE SSH ACCOUNT           "
echo -e "\033[1;93m-----------------------------------------\033[0m"

		read -rp "Username : " -e user
		CLIENT_EXISTS=$(getent passwd "$user" | wc -l)

		if [[ ${CLIENT_EXISTS} == '1' ]]; then
clear
            echo -e "\033[1;93m-----------------------------------------\033[0m"
            echo -e "CREATE SSH ACCOUNT           "
            echo -e "\033[1;93m-----------------------------------------\033[0m"

			echo ""
			echo "A client with the specified name was already created, please choose another name."
			echo ""
			echo -e "\033[0;34m-----------------------------------------\033[0m"
			read -n 1 -s -r -p "Press any key to back on menu"
            m-ssh
		fi
	done
read -p "Password : " Pass
while true; do
    read -p "Limit IP : " iplimit
    read -p "Limit GB : " Quota
    read -p "Expired  : " masaaktif 

    if [[ "$masaaktif" =~ ^[0-9]+$ && "$Quota" =~ ^[0-9]+$ && "$iplimit" =~ ^[0-9]+$ ]]; then
        break
    else
        echo -e "Mohon Untuk Input Angka Saja (tanpa ada huruf atau simbol)"
    fi
done

if [[ $iplimit -gt 0 ]]; then
mkdir -p /etc/limit/ssh/ip
echo -e "$iplimit" > /etc/limit/ssh/ip/$user
else
echo > /dev/null
fi
clear
clear
tgl=$(date -d "$masaaktif days" +"%d")
bln=$(date -d "$masaaktif days" +"%b")
thn=$(date -d "$masaaktif days" +"%Y")
expe="$tgl $bln, $thn"
tgl2=$(date +"%d")
bln2=$(date +"%b")
thn2=$(date +"%Y")
tnggl="$tgl2 $bln2, $thn2"
useradd -e `date -d "$masaaktif days" +"%Y-%m-%d"` -s /bin/false -M $user
expi="$(chage -l $user | grep "Account expires" | awk -F": " '{print $2}')"
echo -e "$Pass\n$Pass\n"|passwd $user &> /dev/null
hariini=`date -d "0 days" +"%Y-%m-%d"`
expi=`date -d "$masaaktif days" +"%Y-%m-%d"`

if [ ! -e /etc/ssh ]; then
  mkdir -p /etc/ssh
fi

if [ -z ${Quota} ]; then
  Quota="0"
fi

c=$(echo "${Quota}" | sed 's/[^0-9]*//g')
d=$((${c} * 1024 * 1024 * 1024))

if [[ ${c} != "0" ]]; then
  echo "${d}" >/etc/ssh/${user}
fi
DATADB=$(cat /etc/ssh/.ssh.db | grep "^#ssh#" | grep -w "${user}" | awk '{print $2}')
if [[ "${DATADB}" != '' ]]; then
  sed -i "/\b${user}\b/d" /etc/ssh/.ssh.db
fi
echo "#ssh# ${user} ${Pass} ${Quota} ${iplimit} ${expe}" >>/etc/ssh/.ssh.db
clear

mkdir -p /detail/ssh/
#Simpan Detail Akun User
cat > /detail/ssh/$user.txt <<-END
-----------------------------------------
SSH Account
-----------------------------------------
Host             : $domain
IP               : $IP
Username         : $user
Password         : $Pass
-----------------------------------------
Limit Quota      : $Quota GB
Limit Ip         : ${iplimit} IP
Host Slowdns     : ${NS}
Pub Key          : ${PUB}
Port OpenSSH     : 22
Port DNS         : 53, 2222
Port SSH UDP     : 1-65535
Port Dropbear    : 22, 109
Port SSH WS      : 80,8080,2086,8880
Port SSH WS SSL  : 443,8443
Port SSL/TLS     : 443
BadVPN UDP       : 7100, 7300, 7300
-----------------------------------------
HTTP CUSTOM      : $domain:1-65535@$user:$Pass"
-----------------------------------------
Payload          : GET /cdn-cgi/trace HTTP/1.1[crlf]Host: Bug_Kalian[crlf][crlf]GET-RAY / HTTP/1.1[crlf]Host: [host][crlf]Connection: Upgrade[crlf]User-Agent: [ua][crlf]Upgrade: websocket[crlf][crlf]
-----------------------------------------
Save Link Account: https://$domain:81/ssh-$user.txt
-----------------------------------------
Aktif Selama     : $masaaktif Hari
Dibuat Pada      : $tnggl
Berakhir Pada    : $expe
-----------------------------------------

END

cat > /var/www/html/ssh-$user.txt <<-END
-----------------------------------------
SSH Account
-----------------------------------------
Host             : $domain
IP               : $IP
Username         : $user
Password         : $Pass
-----------------------------------------
Limit Quota      : $Quota GB
Limit Ip         : ${iplimit} IP
Host Slowdns     : ${NS}
Pub Key          : ${PUB}
Port OpenSSH     : 22
Port DNS         : 53, 2222
Port SSH UDP     : 1-65535
Port Dropbear    : 22, 109
Port SSH WS      : 80,8080,2086,8880
Port SSH WS SSL  : 443,8443
Port SSL/TLS     : 443
BadVPN UDP       : 7100, 7300, 7300
-----------------------------------------
HTTP CUSTOM      : $domain:1-65535@$user:$Pass"
-----------------------------------------
Payload          : GET /cdn-cgi/trace HTTP/1.1[crlf]Host: Bug_Kalian[crlf][crlf]GET-RAY / HTTP/1.1[crlf]Host: [host][crlf]Connection: Upgrade[crlf]User-Agent: [ua][crlf]Upgrade: websocket[crlf][crlf]
-----------------------------------------
Save Link Account: https://$domain:81/ssh-$user.txt
-----------------------------------------
Aktif Selama     : $masaaktif Hari
Dibuat Pada      : $tnggl
Berakhir Pada    : $expe
-----------------------------------------

END
# ================================================
# Kirim notifikasi otomatis ke Telegram (fix)
# ================================================
BOT_DB="/etc/bot/.bot.db"

# Ambil token dan chat id dari file bot.db secara aman
if [ -f "$BOT_DB" ]; then
    # Format file: #bot# TOKEN CHATID
    read _ KEY CHATID < <(grep -E "^#bot# " "$BOT_DB" | tail -n 1)
else
    KEY=""
    CHATID=""
fi

URL="https://api.telegram.org/bot${KEY}/sendMessage"
TIME="10"

# Informasi tambahan server
domain=$(cat /etc/xray/domain 2>/dev/null || echo "example.com")
IP=$(wget -qO- ipinfo.io/ip)
NS=$(cat /etc/xray/dns 2>/dev/null || echo "dns-cdn")
PUB=$(cat /etc/slowdns/server.pub 2>/dev/null || echo "none")
ISP=$(curl -s ipinfo.io/org | cut -d " " -f 2-10)
tnggl=$(date +"%d-%m-%Y")
expe=$(date -d "$masaaktif days" +"%d-%m-%Y")

# Buat teks hasil akun (sama seperti tampilan terminal)
TEXT="-----------------------------------------
SSH Account
-----------------------------------------
Host             : $domain
IP               : $IP
Username         : $user
Password         : $Pass
-----------------------------------------
Limit Quota      : $Quota GB
Limit Ip         : ${iplimit} IP
Host Slowdns     : ${NS}
Pub Key          : ${PUB}
Port OpenSSH     : 22
Port DNS         : 53 ,2222
Port SSH UDP     : 1-65535
Port Dropbear    : 22, 109
Port SSH WS      : 80,8080,2086,8880
Port SSH WS SSL  : 443,8443
Port SSL/TLS     : 443
BadVPN UDP       : 7100, 7300, 7300
-----------------------------------------
HTTP CUSTOM      : $domain:1-65535@$user:$Pass
-----------------------------------------
Payload          : GET /cdn-cgi/trace HTTP/1.1[crlf]Host: Bug_Kalian[crlf][crlf]GET-RAY / HTTP/1.1[crlf]Host: [host][crlf]Connection: Upgrade[crlf]User-Agent: [ua][crlf]Upgrade: websocket[crlf][crlf]
-----------------------------------------
Save Link Account: https://$domain:81/ssh-$user.txt
-----------------------------------------
Aktif Selama     : $masaaktif Hari
Dibuat Pada      : $tnggl
Berakhir Pada    : $expe
-----------------------------------------
*_PEMBELIAN BERHASIL_*
-----------------------------------------"

# Kirim ke Telegram otomatis (tanpa input ulang)
if [ -n "$KEY" ] && [ -n "$CHATID" ]; then
    curl -s --max-time "$TIME" -X POST "$URL" \
        -d chat_id="$CHATID" \
        --data-urlencode "text=$TEXT" >/dev/null 2>&1 &
fi

# Tampilkan hasil di terminal
clear
echo -e "\033[1;93m-----------------------------------------\033[0m"
echo -e "SSH Account"
echo -e "\033[1;93m-----------------------------------------\033[0m"
echo -e "Host             : $domain"
echo -e "IP               : $IP"
echo -e "Username         : $user"
echo -e "Password         : $Pass"
echo -e "\033[1;93m-----------------------------------------\033[0m"
echo -e "Limit Quota      : $Quota GB"
echo -e "Limit Ip         : ${iplimit} IP"
echo -e "Host Slowdns     : ${NS}"
echo -e "Pub Key          : ${PUB}"
echo -e "Port OpenSSH     : 22"
echo -e "Port DNS         : 53 ,2222"
echo -e "Port SSH UDP     : 1-65535"
echo -e "Port Dropbear    : 22, 109"
echo -e "Port SSH WS      : 80,8080,2086,8880"
echo -e "Port SSH WS SSL  : 443,8443"
echo -e "Port SSL/TLS     : 443"
echo -e "BadVPN UDP       : 7100, 7300, 7300"
echo -e "\033[1;93m-----------------------------------------\033[0m"
echo -e "HTTP CUSTOM      : $domain:1-65535@$user:$Pass"
echo -e "\033[1;93m-----------------------------------------\033[0m"
echo -e "Payload          : GET /cdn-cgi/trace HTTP/1.1[crlf]Host: Bug_Kalian[crlf][crlf]GET-RAY / HTTP/1.1[crlf]Host: [host][crlf]Connection: Upgrade[crlf]User-Agent: [ua][crlf]Upgrade: websocket[crlf][crlf]"
echo -e "\033[1;93m-----------------------------------------\033[0m"
echo -e "Save Link Account: https://$domain:81/ssh-$user.txt"
echo -e "\033[1;93m-----------------------------------------\033[0m"
echo -e "Aktif Selama     : $masaaktif Hari"
echo -e "Dibuat Pada      : $tnggl"
echo -e "Berakhir Pada    : $expe"
echo -e "\033[1;93m-----------------------------------------\033[0m"
echo ""
read -n 1 -s -r -p "Press any key to back on menu"
m-ssh
