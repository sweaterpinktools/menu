#!/bin/bash
clear
if ! command -v at &> /dev/null; then
    apt update && sudo apt install -y at
	systemctl enable --now atd
fi
clear
echo -e "\033[1;93m-----------------------------------------\033[0m"
echo -e "CREATE TRIAL VMESS ACCOUNT"
echo -e "\033[1;93m-----------------------------------------\033[0m"
echo -e ""
echo -e "Note: Input Hanya angka saja"
echo -e "Contoh: 30"
echo -e ""
while true; do
    read -p "Input Minutes : " pup
    if [[ "$pup" =~ ^[0-9]+$ ]]; then
        break
    else
        echo -e "Mohon Untuk Input Angka Saja"
    fi
done
Login=Trial
masaaktif=1
iplimit=1
Quota=1
user="${Login}VM$(tr -dc 0-9 </dev/urandom | head -c3)"
domain=$(cat /etc/xray/domain)
uuid=$(cat /proc/sys/kernel/random/uuid)
exp=$(date -d "$masaaktif days" +"%Y-%m-%d")
tgl=$(date -d "$masaaktif days" +"%d")
bln=$(date -d "$masaaktif days" +"%b")
thn=$(date -d "$masaaktif days" +"%Y")
expe="$tgl $bln, $thn"
tgl2=$(date +"%d")
bln2=$(date +"%b")
thn2=$(date +"%Y")
tnggl="$tgl2 $bln2, $thn2"
sed -i '/#vmess$/a\### '"$user $exp"'\
},{"id": "'""$uuid""'","alterId": '"0"',"email": "'""$user""'"' /etc/xray/config.json
exp=$(date -d "$masaaktif days" +"%Y-%m-%d")
sed -i '/#vmessgrpc$/a\### '"$user $exp"'\
},{"id": "'""$uuid""'","alterId": '"0"',"email": "'""$user""'"' /etc/xray/config.json
asu=`cat<<EOF
      {
      "v": "2",
      "ps": "${user}",
      "add": "${domain}",
      "port": "443",
      "id": "${uuid}",
      "aid": "0",
      "net": "ws",
      "path": "/vmess",
      "type": "none",
      "host": "${domain}",
      "tls": "tls"
}
EOF`
ask=`cat<<EOF
      {
      "v": "2",
      "ps": "${user}",
      "add": "${domain}",
      "port": "80",
      "id": "${uuid}",
      "aid": "0",
      "net": "ws",
      "path": "/vmess",
      "type": "none",
      "host": "${domain}",
      "tls": "none"
}
EOF`
grpc=`cat<<EOF
      {
      "v": "2",
      "ps": "${user}",
      "add": "${domain}",
      "port": "443",
      "id": "${uuid}",
      "aid": "0",
      "net": "grpc",
      "path": "vmess-grpc",
      "type": "none",
      "host": "${domain}",
      "tls": "tls"
}
EOF`
vmess_base641=$( base64 -w 0 <<< $vmess_json1)
vmess_base642=$( base64 -w 0 <<< $vmess_json2)
vmess_base643=$( base64 -w 0 <<< $vmess_json3)
vmesslink1="vmess://$(echo $asu | base64 -w 0)"
vmesslink2="vmess://$(echo $ask | base64 -w 0)"
vmesslink3="vmess://$(echo $grpc | base64 -w 0)"
systemctl restart xray > /dev/null 2>&1
service cron restart > /dev/null 2>&1

mkdir -p /detail/vmess/
cat > /detail/vmess/$user.txt <<-END
-----------------------------------------
Trial Vmess Account
-----------------------------------------
Remarks          : ${user}
Domain           : ${domain}
User Quota       : ${Quota} GB
User Ip          : ${iplimit} IP
Port none TLS    : 80, 8080, 2082, 2086, 8880
Port TLS         : 443,2083,8443
id               : ${uuid}
alterId          : 0
Security         : auto
Network          : ws
Path             : /vmess
Dynamic          : https://bugmu.com/path
ServiceName      : vmess-grpc
-----------------------------------------
Link TLS         : ${vmesslink1}
-----------------------------------------
Link none TLS    : ${vmesslink2}
-----------------------------------------
Link GRPC        : ${vmesslink3}
-----------------------------------------
Open Clash       : https://${domain}:81/vmess-$user.txt
-----------------------------------------
Dibuat Pada      : $tnggl
Aktif Selama     : $pup Minutes
-----------------------------------------

END

cat >/var/www/html/vmess-$user.txt <<-END

-----------------------------------------
Format Open Clash
-----------------------------------------
- name: Vmess-$user-WS TLS
  type: vmess
  server: ${domain}
  port: 443
  uuid: ${uuid}
  alterId: 0
  cipher: auto
  udp: true
  tls: true
  skip-cert-verify: true
  servername: ${domain}
  network: ws
  ws-opts:
    path: /vmess
    headers:
      Host: ${domain}

- name: Vmess-$user-WS Non TLS
  type: vmess
  server: ${domain}
  port: 80
  uuid: ${uuid}
  alterId: 0
  cipher: auto
  udp: true
  tls: false
  skip-cert-verify: false
  servername: ${domain}
  network: ws
  ws-opts:
    path: /vmess
    headers:
      Host: ${domain}

- name: Vmess-$user-gRPC (SNI)
  server: ${domain}
  port: 443
  type: vmess
  uuid: ${uuid}
  alterId: 0
  cipher: auto
  network: grpc
  tls: true
  servername: ${domain}
  skip-cert-verify: true
  grpc-opts:
    grpc-service-name: vmess-grpc

-----------------------------------------
Link Akun Vmess                   
-----------------------------------------
Link TLS         : 
${vmesslink1}
-----------------------------------------
Link none TLS    : 
${vmesslink2}
-----------------------------------------
Link GRPC        : 
${vmesslink3}
-----------------------------------------
Expired          : $pup Minutes
-----------------------------------------

END
# ================================================
# Kirim notifikasi otomatis ke Telegram (format sama dengan SSH)
# ================================================
BOT_DB="/etc/bot/.bot.db"

# Ambil token dan chat id dari file bot.db
if [ -f "$BOT_DB" ]; then
    read _ KEY CHATID < <(grep -E "^#bot# " "$BOT_DB" | tail -n 1)
else
    KEY=""
    CHATID=""
fi

URL="https://api.telegram.org/bot${KEY}/sendMessage"
TIME="10"

# Informasi server tambahan
domain=$(cat /etc/xray/domain 2>/dev/null || echo "example.com")
IP=$(curl -sS ipv4.icanhazip.com)
ISP=$(curl -s ipinfo.io/org | cut -d " " -f 2-10)
tnggl=$(date +"%d-%m-%Y")

# Format teks Telegram (identik tampilan terminal)
TEXT="-----------------------------------------
Trial Vmess Account
-----------------------------------------
Remarks          : ${user}
Domain           : ${domain}
IP Server        : ${IP}
ISP              : ${ISP}
User Quota       : ${Quota} GB
User IP          : ${iplimit} IP
Port Non TLS     : 80,8080,2086,8880
Port TLS         : 443,8443
id               : ${uuid}
alterId          : 0
Security         : auto
Network          : ws
Path             : /vmess
Dynamic          : https://bugmu.com/path
ServiceName      : vmess-grpc
-----------------------------------------
Link TLS         : ${vmesslink1}
-----------------------------------------
Link none TLS    : ${vmesslink2}
-----------------------------------------
Link GRPC        : ${vmesslink3}
-----------------------------------------
Open Clash       : https://${domain}:81/vmess-${user}.txt
-----------------------------------------
Dibuat Pada      : ${tnggl}
Aktif Selama     : ${pup} Minutes
-----------------------------------------
*_PEMBELIAN BERHASIL_*
-----------------------------------------"

# Kirim otomatis ke Telegram
if [ -n "$KEY" ] && [ -n "$CHATID" ]; then
    curl -s --max-time "$TIME" -X POST "$URL" \
        -d chat_id="$CHATID" \
        --data-urlencode "text=$TEXT" >/dev/null 2>&1 &
fi

# ================================================
# Restart layanan dan tampilkan hasil ke terminal
# ================================================
systemctl restart xray >/dev/null 2>&1
echo sed -i "/$user/d" /etc/xray/config.json | at now + $pup minutes
sleep 0.5
clear

echo -e "\033[1;93m-----------------------------------------\033[0m"
echo -e "Trial Vmess Account"
echo -e "\033[1;93m-----------------------------------------\033[0m"
echo -e "Remarks          : ${user}"
echo -e "Domain           : ${domain}"
echo -e "User Quota       : ${Quota} GB"
echo -e "User IP          : ${iplimit} IP"
echo -e "Port Non TLS     : 80,8080,2086,8880"
echo -e "Port TLS         : 443,8443"
echo -e "id               : ${uuid}"
echo -e "alterId          : 0"
echo -e "Security         : auto"
echo -e "Network          : ws"
echo -e "Path             : /vmess"
echo -e "Dynamic          : https://bugmu.com/path"
echo -e "ServiceName      : vmess-grpc"
echo -e "\033[1;93m-----------------------------------------\033[0m"
echo -e "Link TLS         : ${vmesslink1}"
echo -e "\033[1;93m-----------------------------------------\033[0m"
echo -e "Link none TLS    : ${vmesslink2}"
echo -e "\033[1;93m-----------------------------------------\033[0m"
echo -e "Link GRPC        : ${vmesslink3}"
echo -e "\033[1;93m-----------------------------------------\033[0m"
echo -e "Open Clash       : https://${domain}:81/vmess-${user}.txt"
echo -e "\033[1;93m-----------------------------------------\033[0m"
echo -e "Dibuat Pada      : ${tnggl}"
echo -e "Aktif Selama     : ${pup} Minutes"
echo -e "\033[1;93m-----------------------------------------\033[0m"
echo ""
read -n 1 -s -r -p "Press any key to back on menu"
m-vmess
