1)
clear 
echo -e "${BIWhite}─────────────────────────────────────────────────────────────────────${NC}"
echo -e "${BIYellow}TOTAL SERVER BANDWITH REMAINING${NC}"
echo -e "${BIWhite}─────────────────────────────────────────────────────────────────────${NC}"
echo -e ""

vnstat

echo -e ""
echo -e "${BIWhite}─────────────────────────────────────────────────────────────────────${NC}"
echo -e ""
read -n 1 -s -r -p "Press any key to back on menu"
bw
;;

2)
clear 
