echo -e ""
echo -e "${BIWhite}─────────────────────────────────────────────────────────────────────${NC}"
echo -e ""
read -n 1 -s -r -p "Press any key to back on menu"
bw
;;

0)
sleep 1
menu
;;
x)
menu
;;
*)
echo -e ""
echo -e "Anda salah tekan"
sleep 1
bw
;;
0) clear ; menu ; menu ;;
x) clear ; menu ;;
*) echo "anda salah tekan" ; sleep 1 ; bw ;;
esac