echo -e "${IGreen}[${BIWhite}04${IGreen}] ${NC}${BIWhite}View Usage Table Every Day${NC}"
echo -e "${IGreen}[${BIWhite}05${IGreen}] ${NC}${BIWhite}View Usage Table Every Month${NC}"
echo -e "${IGreen}[${BIWhite}06${IGreen}] ${NC}${BIWhite}View Usage Table Every Year${NC}"
echo -e "${IGreen}[${BIWhite}07${IGreen}] ${NC}${BIWhite}View Highest Usage Table${NC}"
