echo -e ""
echo -e "${BIWhite}─────────────────────────────────────────────────────────────────────${NC}"
echo -e ""
read -n 1 -s -r -p "Press any key to back on menu"
bw
;;

5)
clear 
echo -e "${BIWhite}─────────────────────────────────────────────────────────────────────${NC}"
echo -e "${BIYellow}TOTAL SERVER BANDWITH EVERY MONTH${NC}"
echo -e "${BIWhite}─────────────────────────────────────────────────────────────────────${NC}"
echo -e ""

