echo -e ""
echo -e "${BIWhite}─────────────────────────────────────────────────────────────────────${NC}"
echo -e ""
read -n 1 -s -r -p "Press any key to back on menu"
bw
;;

7)
clear 
echo -e "${BIWhite}─────────────────────────────────────────────────────────────────────${NC}"
echo -e "${BIYellow}HIGHEST TOTAL BANDWITH${NC}"
echo -e "${BIWhite}─────────────────────────────────────────────────────────────────────${NC}"
echo -e ""

vnstat -t

echo -e ""
echo -e "${BIWhite}─────────────────────────────────────────────────────────────────────${NC}"
echo -e ""
read -n 1 -s -r -p "Press any key to back on menu"
bw
;;

8)
clear 
echo -e "${BIWhite}─────────────────────────────────────────────────────────────────────${NC}"
echo -e "${BIYellow}HOURLY USED STATISTICS${NC}"
echo -e "${BIWhite}─────────────────────────────────────────────────────────────────────${NC}"
echo -e ""

