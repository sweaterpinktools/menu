echo -e "${BIWhite}─────────────────────────────────────────────────────────────────────${NC}"
echo -e ""
read -n 1 -s -r -p "Press any key to back on menu"
bw
;;

10)
clear 
echo -e "${BIWhite}─────────────────────────────────────────────────────────────────────${NC}"
echo -e "${BIYellow}LIVE TRAFFIC USING BANDWITH${NC}"
echo -e "${BIWhite}─────────────────────────────────────────────────────────────────────${NC}"
