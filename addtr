#!/bin/bash
clear
until [[ $user =~ ^[a-zA-Z0-9_]+$ && ${user_EXISTS} == '0' ]]; do
echo -e "\033[1;93m-----------------------------------------\033[0m"
echo -e "CREATE TROJAN ACCOUNT          "
echo -e "\033[1;93m-----------------------------------------\033[0m"

		read -rp "Username : " -e user
		user_EXISTS=$(grep -w $user /etc/xray/config.json | wc -l)

		if [[ ${user_EXISTS} == '1' ]]; then
clear
    echo -e "\033[1;93m-----------------------------------------\033[0m"
    echo -e "CREATE TROJAN ACCOUNT          "
    echo -e "\033[1;93m-----------------------------------------\033[0m"
			echo ""
			echo "A client with the specified name was already created, please choose another name."
			echo ""
			echo -e "\033[1;93m-----------------------------------------\033[0m"
			read -n 1 -s -r -p "Press any key to back on menu"
			m-trojan
		fi
	done

while true; do
    read -p "Expired  : " masaaktif
    read -p "Limit GB : " Quota
    read -p "Limit IP : " iplimit

    if [[ "$masaaktif" =~ ^[0-9]+$ && "$Quota" =~ ^[0-9]+$ && "$iplimit" =~ ^[0-9]+$ ]]; then
        break
    else
        echo -e "Mohon Untuk Input Angka Saja (tanpa ada huruf atau simbol)"
    fi
done
domain=$(cat /etc/xray/domain)
uuid=$(cat /proc/sys/kernel/random/uuid)
tgl=$(date -d "$masaaktif days" +"%d")
bln=$(date -d "$masaaktif days" +"%b")
thn=$(date -d "$masaaktif days" +"%Y")
expe="$tgl $bln, $thn"
tgl2=$(date +"%d")
bln2=$(date +"%b")
thn2=$(date +"%Y")
tnggl="$tgl2 $bln2, $thn2"
exp=`date -d "$masaaktif days" +"%Y-%m-%d"`
sed -i '/#trojanws$/a\#! '"$user $exp"'\
},{"password": "'""$uuid""'","email": "'""$user""'"' /etc/xray/config.json
sed -i '/#trojangrpc$/a\#! '"$user $exp"'\
},{"password": "'""$uuid""'","email": "'""$user""'"' /etc/xray/config.json

# Link Trojan Akun
systemctl restart xray > /dev/null 2>&1
trojanlink1="trojan://${uuid}@${domain}:443?mode=gun&security=tls&type=grpc&serviceName=trojan-grpc&sni=${domain}#${user}"
trojanlink="trojan://${uuid}@${domain}:443?path=%2Ftrojan-ws&security=tls&host=${domain}&type=ws&sni=${domain}#${user}"

mkdir -p /detail/trojan/
#Simpan Detail Akun User
cat > /detail/trojan/$user.txt <<-END
-----------------------------------------
Xray/Trojan Account
-----------------------------------------
Remarks          : ${user}
Host/IP          : ${domain}
User Quota       : ${Quota} GB
User Ip          : ${iplimit} IP
Port             : 443,8443
Key              : ${uuid}
Path             : /trojan-ws/multi-path
ServiceName      : trojan-grpc
-----------------------------------------
Link TLS         : ${trojanlink}
-----------------------------------------
Link GRPC        : ${trojanlink1}
-----------------------------------------
Format OpenClash : https://${domain}:81/trojan-$user.txt
-----------------------------------------
Aktif Selama     : $masaaktif Hari
Dibuat Pada      : $tnggl
Berakhir Pada    : $expe
-----------------------------------------

END

cat >/var/www/html/trojan-$user.txt <<-END
-----------------------------------------
Format Open Clash
-----------------------------------------
- name: Trojan-$user-GO/WS
  server: ${domain}
  port: 443
  type: trojan
  password: ${uuid}
  network: ws
  sni: ${domain}
  skip-cert-verify: true
  udp: true
  ws-opts:
    path: /trojan-ws
    headers:
        Host: ${domain}

- name: Trojan-$user-gRPC
  type: trojan
  server: ${domain}
  port: 443
  password: ${uuid}
  udp: true
  sni: ${domain}
  skip-cert-verify: true
  network: grpc
  grpc-opts:
    grpc-service-name: trojan-grpc

-----------------------------------------
Link Akun Trojan 
-----------------------------------------
Link WS          : 
${trojanlink}
-----------------------------------------
Link GRPC        : 
${trojanlink1}
-----------------------------------------
Expired          : $expe
-----------------------------------------
END
# ================================================
# Kirim notifikasi otomatis ke Telegram (format sama dengan SSH)
# ================================================
BOT_DB="/etc/bot/.bot.db"

# Ambil token dan chat id dari file bot.db (baris terakhir #bot#)
if [ -f "$BOT_DB" ]; then
    read _ KEY CHATID < <(grep -E "^#bot# " "$BOT_DB" | tail -n 1)
else
    KEY=""
    CHATID=""
fi

URL="https://api.telegram.org/bot${KEY}/sendMessage"
TIME="10"

# Pastikan variabel penting tersedia (user, uuid, trojanlink, trojanlink1, domain, iplimit, Quota, masaaktif, tnggl, expe)
# Informasi server tambahan
IP=$(curl -sS ipv4.icanhazip.com || echo "0.0.0.0")
ISP=$(curl -s ipinfo.io/org | cut -d " " -f 2-10 || echo "Unknown-ISP")
tnggl=$(date +"%d-%m-%Y")
expe=$(date -d "$masaaktif days" +"%d-%m-%Y" 2>/dev/null || echo "$expe")

# Susun teks notifikasi (plain text, identik dengan tampilan terminal)
TEXT="-----------------------------------------
Xray/Trojan Account
-----------------------------------------
Remarks          : ${user}
Host/IP          : ${domain}
IP Server        : ${IP}
ISP              : ${ISP}
User Quota       : ${Quota} GB
User Ip          : ${iplimit} IP
Port             : 443,8443
Key              : ${uuid}
Path             : /trojan-ws/multi-path
ServiceName      : trojan-grpc
-----------------------------------------
Link TLS         : ${trojanlink}
-----------------------------------------
Link GRPC        : ${trojanlink1}
-----------------------------------------
Format OpenClash : https://${domain}:81/trojan-${user}.txt
-----------------------------------------
Aktif Selama     : ${masaaktif} Hari
Dibuat Pada      : ${tnggl}
Berakhir Pada    : ${expe}
-----------------------------------------
*_PEMBELIAN BERHASIL_*
-----------------------------------------"

# Kirim ke Telegram (jika bot telah diset)
if [ -n "$KEY" ] && [ -n "$CHATID" ]; then
    curl -s --max-time "$TIME" -X POST "$URL" \
        -d chat_id="$CHATID" \
        --data-urlencode "text=$TEXT" >/dev/null 2>&1 &
fi

# Tampilkan hasil di terminal (tetap sama)
clear
echo -e "\033[1;93m-----------------------------------------\033[0m"
echo -e "Xray/Trojan Account"
echo -e "\033[1;93m-----------------------------------------\033[0m"
echo -e "Remarks          : ${user}"
echo -e "Host/IP          : ${domain}"
echo -e "User Quota       : ${Quota} GB"
echo -e "User Ip          : ${iplimit} IP"
echo -e "Port             : 443,8443"
echo -e "Key              : ${uuid}"
echo -e "Path             : /trojan-ws/multi-path"
echo -e "ServiceName      : trojan-grpc"
echo -e "\033[1;93m-----------------------------------------\033[0m"
echo -e "Link TLS         : ${trojanlink}"
echo -e "\033[1;93m-----------------------------------------\033[0m"
echo -e "Link GRPC        : ${trojanlink1}"
echo -e "\033[1;93m-----------------------------------------\033[0m"
echo -e "Format OpenClash : https://${domain}:81/trojan-${user}.txt"
echo -e "\033[1;93m-----------------------------------------\033[0m"
echo -e "Aktif Selama     : $masaaktif Hari"
echo -e "Dibuat Pada      : $tnggl"
echo -e "Berakhir Pada    : $expe"
echo -e "\033[1;93m-----------------------------------------\033[0m"
echo ""
read -n 1 -s -r -p "Press any key to back on menu"
m-trojan
